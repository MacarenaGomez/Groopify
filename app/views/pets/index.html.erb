<div class="row">
  <div class="col-xs-12 col-md-12">      
    <h1>Listing Pets</h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-6">      
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Owner</th>
        </tr>
      </thead>

      <tbody>
        <% @pets.each do |pet| %>
          <tr>
            <td><a href="#" pet-id="<%= pet.id %>"><%= pet.name %></a></td>
            <td><%= pet.user.name %></td>
            <% if current_user.id == pet.user_id %>
              <td><%= link_to("Editar", edit_user_pet_path(current_user, pet)) %></td>
              <td> </td>
              <td><%= link_to('Delete', user_pet_path(current_user, pet), method: :delete, data: {confirm: 'Are you sure?'}) %></td>
            <%end %>
            
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New pet', new_user_pet_path(current_user) %>
  </div>
  
  <div class="col-xs-12 col-md-6 detail"> 
    <div class="row">
      <div class="col-xs-6 col-md-5" id="pet-photo">
      </div>
      <div class="col-xs-6 col-md-6">
        <h2 id="pet-name"></h2>
        <dl class="dl-horizontal">
          <dt>Species:</dt>
          <dd id="pet-species"></dd>
          <dt>Age:</dt>
          <dd id="pet-age"></dd>
          <dt>Owner:</dt>
          <dd id="pet-owner"></dd>
        </dl>
      </div>
    </div>
  </div>
</div>
